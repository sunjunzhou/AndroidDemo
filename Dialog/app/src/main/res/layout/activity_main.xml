<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="525dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <Button
            android:id="@+id/click1a"
            android:layout_width="386dp"
            android:layout_height="73dp"
            android:layout_gravity="center_horizontal"
            android:text="显示一个提醒对话框"
            android:textSize="24sp" />

        <Button
            android:id="@+id/click1b"
            android:layout_width="386dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:text="显示一个是否型对话框"
            android:textSize="24sp" />

        <Button
            android:id="@+id/click2"
            android:layout_width="386dp"
            android:layout_height="71dp"
            android:layout_gravity="center_horizontal"
            android:text="显示一个单选对话框"
            android:textSize="24sp" />

        <Button
            android:id="@+id/click3"
            android:layout_width="390dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:text="显示一个多谢对话框"
            android:textSize="24sp" />

        <Button
            android:id="@+id/click4"
            android:layout_width="389dp"
            android:layout_height="70dp"
            android:text="进度对话框"
            android:textSize="24sp" />

        <Button
            android:id="@+id/click5"
            android:layout_width="386dp"
            android:layout_height="68dp"
            android:text="进度条对话框"
            android:textSize="24sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>